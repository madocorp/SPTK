<Window title="List">
  <Box>
    <Event type="KeyPress">Controller::showPanel</Event>
    Press space to show a Panel!
  </Box>
  <Panel name="panel">
    <PanelTitle>ListBox test</PanelTitle>
    <PanelContent>
      <Label>File:<File placeholder="Press space to choose a file!" name="test1" start="~" /></Label>
      <Label>New file:<File placeholder="Press space to choose a file!" name="test2" start="~" create="true" /></Label>
      <Label>Directory:<File placeholder="Press space to choose a directory!" name="test3" start="~" file="false" /></Label>
      <Label>New directory:<File placeholder="Press space to choose a directory!" name="test4" start="~" file="false" create="true" /></Label>
    </PanelContent>
  </Panel>
</Window>
