<Window title="List">
  <Box>
    <Event type="KeyPress">Controller::showPanel</Event>
    Press space to show a Panel!
  </Box>
  <Panel name="panel">
    <PanelTitle>ListBox test</PanelTitle>
    <PanelContent>
      <Label>Test:<Input name="test" value="0123456789abcdefghijklmnopqrstuvwxyz0123456789" /></Label>
      <Label>Test2:<Input name="test2" /></Label>
      <Label name="x">Fruits:
        <ListBox name="fruits" typing="filter">
          <ListItem>lemon</ListItem>
          <ListItem filterable="true" selected="true">banana</ListItem>
          <ListItem filterable="true">orange</ListItem>
          <ListItem filterable="true">apple</ListItem>
          <ListItem filterable="true">green pear</ListItem>
          <ListItem filterable="true">pear red</ListItem>
          <ListItem filterable="true" left="/">pear</ListItem>
          <ListItem filterable="true" right=">">pear</ListItem>
          <ListItem filterable="true">pear</ListItem>
          <ListItem filterable="true">pear</ListItem>
          <ListItem filterable="true">pear</ListItem>
          <ListItem filterable="true">pear</ListItem>
          <ListItem value="VALUE" filterable="true">pear</ListItem>
        </ListBox>
      </Label>
    </PanelContent>
  </Panel>
</Window>
